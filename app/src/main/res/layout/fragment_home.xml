    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMaps"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:background="#FFFFFF"
                android:src="@drawable/maps" />

            <EditText
                android:id="@+id/txtLocation"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#000000"
                android:gravity="center"
                android:hint="Buscar una localidad"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="#D5FFFFFF"
                tools:ignore="TouchTargetSizeCheck"/>


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="-35dp"
                android:background="@color/white"
                android:src="@android:drawable/ic_menu_search"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imgButton0"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:background="#0000"
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-330dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/imagen5"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="65dp"
                android:text="Monte Verde - Puntarenas"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="210dp"
                android:buttonTint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imgButton1"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:background="#0000"
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-355dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/imagen6"
                tools:ignore="SpeakableTextPresentCheck"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="-270dp"
                android:layout_marginTop="293dp"
                android:text="Manzanillo - Limón"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="438dp"
                android:buttonTint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />/>

            <ImageButton
                android:id="@+id/imgButton2"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:background="#0000"
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_marginLeft="-358dp"
                android:layout_marginTop="530dp"
                android:src="@drawable/imagen7"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="522dp"
                android:text="Monte Verde - Puntarenas"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="665dp"
                android:buttonTint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#168F29"
                android:fontFamily="@font/playfairdisplay_black"
                android:text="Ver más"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginLeft="-358dp"
                android:layout_marginTop="760dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-375dp"
                android:layout_marginTop="830dp"
                android:fontFamily="@font/playfairdisplay_italic"
                android:text="Costa Rica es conocida por ser una de las reservas naturales mejor conservadas del planeta, atrevete a conocerla."
                android:textSize="34sp" />

            <TextView
                android:id="@+id/lblCopy"
                android:layout_width="520dp"
                android:layout_height="70dp"
                android:fontFamily="@font/playfairdisplay_black"
                android:inputType="text"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:text="@string/lblCopy"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="#168F29"
                android:layout_marginLeft="-475dp"
                android:layout_marginTop="1020dp"/>

        </LinearLayout>
    </ScrollView>
