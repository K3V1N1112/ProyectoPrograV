<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen1"
    android:backgroundTint="#50FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".InicioActivity">

    <TextView
        android:id="@+id/lblTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfairdisplay_bolditalic"
        android:inputType="text"
        android:text="@string/lbltittle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:translationY="50dp"
        android:paddingTop="20dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#168F29"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-360dp"
        android:translationY="300dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#168F29"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="Registrarse"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-350dp"
        android:translationY="300dp" />

    <Button
        android:id="@+id/btnInvite"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="continuar como invitado"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-700dp"
        android:translationY="570dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#168F29"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="Salir"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-920dp"
        android:translationY="640dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="Configuración       |"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-1150dp"
        android:translationY="710dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:fontFamily="@font/playfairdisplay_black"
        android:text="Acerca de"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationX="-1220dp"
        android:translationY="710dp"
        android:background="@android:color/transparent"/>

</LinearLayout>